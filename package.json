{
  "name": "underwater-game",
  "version": "1.11.1",
  "description": "Aquatic 3D HTML5 game of survival, fighting underwater creatures in a web browser.",
  "main": "server/index.js",
  "scripts": {
    "test": "npm run eslint && npm run mocha",
    "mocha": "node ./node_modules/.bin/mocha-webpack --recursive --webpack-config webpack.config.test.js ./spec/*.spec.js",
    "eslint": "node ./node_modules/.bin/eslint ./server/*.js ./server/**/*.js ./client/*.js ./client/**/*.js",
    "build": "node ./node_modules/.bin/webpack --mode=development --devtool source-map",
    "watch": "node ./node_modules/.bin/webpack --mode=development --devtool source-map --watch --progress",
    "build-production": "node ./node_modules/.bin/webpack --mode=production",
    "start": "npm run build && node ./server/index.js",
    "start-production": "export NODE_ENV=production&& npm run build-production && forever stop ./server/index.js && forever start ./server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebabel-eu/underwater-game.git"
  },
  "keywords": [
    "game"
  ],
  "author": "Thomas Amar <hello@ebabel.eu> (https://ebabel.eu)",
  "contributors": [
    "David Pitts <dgapitts@gmail.com>"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ebabel-eu/underwater-game/issues"
  },
  "homepage": "https://github.com/ebabel-eu/underwater-game#readme",
  "dependencies": {
    "express": "^4.16.3",
    "node-gameloop": "^0.1.4",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.2",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "eslint": "^5.5.0",
    "mocha": "^5.2.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "webpack": "^4.18.0",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}
